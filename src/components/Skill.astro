--- 
import '../styles/global.css'

import type {Skill} from '../interfaces/interface';
const {name,percentage,src_icon} = Astro.props as Skill;

import { Image } from 'astro:assets';   
---

 <!-- This component represents the level of some skill using a circle chart -->
<div class="flex flex-col items-center justify-center">

    <div class="min-w-[65px] min-h-[65px] w-[5.5vw] h-[5.5vw] rounded-full bg-gray-100 dark:bg-gray-700  popUp">

        <div class=" w-full h-full rounded-full flex items-center justify-center"
        style={`background: linear-gradient(to right, var(--primary-color), var(--secondary-color), var(--tertiary-color)); padding: 10px; 
        mask-image: linear-gradient(to bottom, rgba(0,0,0,1) 0%, rgba(0,0,0,0) ${percentage}%);`}>
            <div class="w-full h-full rounded-full bg-gray-100 dark:bg-gray-700 " > </div>
     
        </div>
        
        <div  class="flex justify-center items-center  flex-col" style="  position: relative; top: -75%; right: 0%;">
            <Image
            src={src_icon ?? '/default-icon.png'}
            alt={name}
            width={40}
            height={100}
            style={`width: 2.5vw; min-width: 20px; `}
            />
            <span class="flex justify-center mt-1 font-bold text-white w-10 text-[10px] bg-primary rounded-full">{percentage}%</span>
        </div>
       
    </div>

   
    <span class="font-bold">{name}</span>
</div>


